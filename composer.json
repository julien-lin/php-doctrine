{
    "name": "julienlinard/doctrine-php",
    "description": "Modern ORM for PHP 8+ inspired by Doctrine, with Entity Manager, Repository Pattern, Query Builder and PHP 8 Attributes mapping",
    "type": "library",
    "keywords": [
        "orm",
        "doctrine",
        "entity",
        "repository",
        "query-builder",
        "database",
        "mapping",
        "php8",
        "attributes"
    ],
    "homepage": "https://github.com/julien-lin/doctrine-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Julien Linard",
            "email": "julien.linard.dev@gmail.com",
            "homepage": "https://github.com/julien-lin"
        }
    ],
    "support": {
        "issues": "https://github.com/julien-lin/doctrine-php/issues",
        "source": "https://github.com/julien-lin/doctrine-php"
    },
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*"
    },
    "autoload": {
        "psr-4": {
            "JulienLinard\\Doctrine\\": "src/Doctrine/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JulienLinard\\Doctrine\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    },
    "suggest": {
        "symfony/console": "Optional: For structured CLI commands for migrations"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpunit/phpunit": true
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-text",
        "doctrine-migrate": "php bin/doctrine-migrate"
    },
    "bin": [
        "bin/doctrine-migrate"
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "version": "1.0.10"
}

